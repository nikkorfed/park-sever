extends /layout

append variables
  - var category = 'Услуги'
  - var title = 'Стеклянный дом'
  - var subtitle = 'Стеклянный гостевой домик вдали от городской суеты и забот. Оборудован современной мебелью и удобной кухней, имеет голосовое управление через Алису и высокоскоростной интернет до 150 Мбит/сек.'
  - var path = {};

